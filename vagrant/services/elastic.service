[Unit]
Description=Elastic

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill elasticsearch
ExecStartPre=-/usr/bin/docker rm elasticsearch
ExecStartPre=/usr/bin/docker pull dockerfile/elasticsearch
ExecStart=/bin/bash -c "HOST_IP=$(/bin/ifconfig enp0s8 | awk '/inet /{print $2}') && exec /usr/bin/docker run --name elasticsearch -p $HOST_IP::9200 dockerfile/elasticsearch"
ExecStop=/usr/bin/docker stop elasticsearch