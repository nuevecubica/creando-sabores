#!/bin/bash

db='chefcito-test'
target='./test/db_dump/'

# DB from params
if [ "x$1" != "x" ]; then
  db="$1"
fi

# Target from params
if [ "x$2" != "x" ]; then
  target="$2"
fi

# Target folder
if [ ! -d $target ]; then
  mkdir -p $target
fi

collections() {
  # Collections from mongodb
  dbcollections=$(mongo "${db}" --eval "printjson(db.getCollectionNames())" --quiet)

  if hash python 2>/dev/null; then
    collections=$(python -c "print ' '.join(${dbcollections})")
  else
    collections=$(node -e "console.log(${dbcollections}.join(' '))")
  fi
  echo $collections
}

# Colors
color_1='\033[1;34m'
color_2='\033[1;37m'
color_3='\033[0;37m'
color_4='\033[1;30m'
color_no='\033[0m'
color_icon=$'\xF0\x9F\x92\xBE'

# Dump everything
echo -e "${color_icon}  ${color_1}===> ${color_2}Generating dump of ${db}${color_4} in ${target}"
for collection in $(collections); do
  echo -e "${color_icon}  ${color_1}---> ${color_3}Exporting collection ${color_2}${collection}${color_4} >" $(mongoexport --db "${db}" --collection "${collection}" --out "${target}${collection}.json" | grep -vi "connected")
done
echo -ne ${color_no}
