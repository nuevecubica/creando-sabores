extends ../layouts/default

include ../mixins/recipe

block content
	#signup.ui.grid.segment
		.ui.page.grid
			.row

			.row
				.four.wide.column

				.logo.eight.wide.column
					a.icon-chef-logo.icon(href="/")

					.span Acceso
					.span Fácil y rápido

			.row
				.sixteen.wide.column

					.ui.two.column.grid
						.column.center.aligned
							.ui.button.chef.button-green
								a(href='') Facebook

							.ui.button.chef.button-green
								a(href='') Google

						.column
							form(action='registro', method='post')
								.ui.form.segment
									.field
										label(for='login_email') Correo electrónico
										.ui.left.labeled.input
											input(id='login_email', type='email', name='login_email', placeholder='Correo electrónico')
									.field
										label(for='login_password') Contraseña
										.ui.left.labeled.input
											input(id='login_password', name='login_password', type='password')

									input(type='hidden', name='action', value='login')

									button.ui.button.chef.button-green(type='submit') Acceder