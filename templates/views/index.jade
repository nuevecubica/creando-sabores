extends ../layouts/default

block content
	#recipe-of-day.ui.page.grid.segment
		.row
			.sixteen.wide.column
				.ui.grid.segment(style = "background: transparent url(../frontend/images/test_recipe_bg.png) no-repeat")

					.row
