extends ../layouts/default

block content
	#recipe.ui.grid.segment
		.ui.page.grid.head
			#header.row
				include ../components/header

			.row.logo.shadow
				a.icon-chef-logo.icon(href="/")

			.row

			.row
				.social.five.wide.column= __('Follow us on social networks')
					.ui.four.column.center.aligned.grid
						.column
							a.ui.item(href='http://twitter.com')
								.ui.icon
									i.icon-chef-twitter.icon
						.column
							a.ui.item(href='http://youtube.es')
								.ui.icon
									i.icon-chef-google.icon
						.column
							a.ui.item(href='http://facebook.com')
								.ui.icon
									i.icon-chef-facebook.icon
						.column
							a.ui.item(href='http://pinterest.es')
								.ui.icon
									i.icon-chef-pinterest.icon

				.three.wide.column

				.img-title.eight.wide.column
					img.ui.image(src = '../frontend/images/test_recipe.png')
					.text
						.span Lasagna del chef

	.ui.page.grid.body

		include ../components/search

		//- #grid.ui.page.grid.segment


		#video.ui.grid.segment
			.row

			.row
				.six.wide.column
				.logo.four.wide.column
					img.ui.image.play(src = '../frontend/images/test_play.png')

			.row
				.eight.wide.column
				.title.eight.wide.column
					img.ui.image(src = '../frontend/images/test_video_recipe.png')
					.text
						.span Lasagna del chef
					.date
						.span 13 Mayo de 2014



		#video-recipes.list.ui.grid.segment
			- for (var row = 0; row < 5; row++)
				.row
					.five.wide.column
						.thumbnail
							.row

							.row
								.ui.three.column.center.aligned.grid
									.column
									.column
										img.ui.image.play(src = '../frontend/images/test_play.png')
									.column

							.row
								.ui.three.column.center.aligned.grid
									.column
										i.icon-chef-time.icon
										.span 2 h

									.column
										i.icon-chef-porciones.icon
										.span 4

									.difficulty.column
										i.icon-chef-tenedor.icon.on
										i.icon-chef-tenedor.icon.on
										i.icon-chef-tenedor.icon.off
										i.icon-chef-tenedor.icon.off
										i.icon-chef-tenedor.icon.off

					.eleven.wide.column
						.ui.twelve.column
							.rating
								.strong= __('Rating')
								.span
									.ui.icon
										i.icon-chef-star.icon.on
										i.icon-chef-star.icon.on
										i.icon-chef-star.icon.off
										i.icon-chef-star.icon.off
										i.icon-chef-star.icon.off

