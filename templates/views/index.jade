extends ../layouts/default

include ../mixins/header
include ../mixins/grid
include ../mixins/recipe

block js
	script(src='/js/recipes.js')

block content
	+header(data, section)

	.ui.page.grid.body

		include ../components/search

		#index-grid.ui.grid.segment.wall
			.row.computer.only
				+grid(data.grid, data.order.grid_order_desktop_home, data.sizes.grid_size_desktop_home)

			.row.tablet.only
				+grid(data.grid, data.order.grid_order_tablet_home, data.sizes.grid_size_tablet_home)

			.row.mobile.only
				+grid(data.grid, data.order.grid_order_mobile_home, data.sizes.grid_size_mobile_home)

		#add-new-bar.ui.grid.segment
			.row
				.sixteen.wide.column
					.span= __('Do you have a new recipe?')
						.ui.button.chef.button-brick
							a(href='/nueva-receta')= __('Create recipe')

		#video.ui.grid.segment
			.row

			.row
				.six.wide.column
				.logo.four.wide.column
					img.ui.image.play(src = '/images/test_play.png')

			.row
				.eight.wide.column
				.title.eight.wide.column
					img.ui.image(src = '/images/test_video_recipe.png')
					.text
						.span Lasagna del chef
					.date
						.span 13 Mayo de 2014

		#recipes.ui.grid.segment

			.row
				.ui.grid.segment.list.stackable
					if data.videorecipes.lastest.length
						each recipe in data.videorecipes.lastest
							+recipe(recipe)

					else
						| #{__('No videorecipes yet')}