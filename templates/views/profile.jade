extends ../layouts/default

include ../mixins/about

block content
	.user-profile.ui.grid.segment(style="background-image: url(#{user.media.header.url}); background-size: cover;")
		.ui.page.grid.head
			.row
				include ../components/header

			.row.logo.shadow
				a.icon-chef-logo.icon(href="/")

			.row.section
				.title.shadow Mi recetario

			.row
				.twelve.wide.column

				.social.four.wide.column
					.ui.button.chef.button-gray
						i.social.icon-chef-camera
						a(href='/') Cambiar imagen

	.user-profile-content.ui.page.grid.body

		.about.ui.grid.segment
			.row
				+about(user)
