extends ../layouts/default

include ../mixins/recipe

block content
	#recipe.ui.grid.segment
		.ui.page.grid.head.with-title.with-social
			#header.row
				include ../components/header

			.row.logo.shadow
				a.icon-chef-logo.icon(href="/")

			.row.section
				.title.shadow= __('Recipes')

			.row
				.social.five.wide.column= __('Follow us on social networks')
					.ui.four.column.center.aligned.grid
						.column
							a.ui.item(href='http://twitter.com')
								.ui.icon
									i.icon-chef-twitter.icon
						.column
							a.ui.item(href='http://youtube.es')
								.ui.icon
									i.icon-chef-google.icon
						.column
							a.ui.item(href='http://facebook.com')
								.ui.icon
									i.icon-chef-facebook.icon
						.column
							a.ui.item(href='http://pinterest.es')
								.ui.icon
									i.icon-chef-pinterest.icon

				.three.wide.column

				.img-title.eight.wide.column
					img.ui.image(src = '../frontend/images/test_recipe.png')
					.text
						.span Lasagna del chef

	.ui.page.grid.body

		include ../components/search
		#grid-recipes.ui.grid
			.row
				.sixteen.wide.column.computer.only
					.recipe.uno
						span 1. La receta de la abuela: potaje de verduras
					.recipe.dos
						span 2. lasaña del chef
					.recipe.tres
						span 3 TRES
					.recipe.cuatro
						span 4 CUATRO
					.recipe.cinco
						span 5 CINCO
					.recipe.seis
						span 6 SEIS
					.recipe.siete
						span 7 SIETE
					.recipe.ocho
						span 8 OCHO
					.recipe.nueve
						span 9 NUEVE
					.recipe.diez
						span 10 DIEZ
			.row
				.sixteen.wide.column.tablet.only
					.recipe.cinco
						span 5 CINCO
					.recipe.uno
						span 1. La receta de la abuela: potaje de verduras
					.recipe.dos
						span 2. lasaña del chef
					.recipe.cuatro
						span 4 CUATRO
					.recipe.tres
						span 3 TRES
					.recipe.seis
						span 6 SEIS
					.recipe.siete
						span 7 SIETE
					.recipe.ocho
						span 8 OCHO
					.recipe.nueve
						span 9 NUEVE
					.recipe.diez
						span 10 DIEZ
			.row
				.sixteen.wide.column.mobile.only
					.recipe.uno
						span 1. La receta de la abuela: potaje de verduras
					.recipe.dos
						span 2. lasaña del chef
					.recipe.cinco
						span 5 CINCO
					.recipe.tres
						span 3 TRES
					.recipe.seis
						span 6 SEIS
					.recipe.cuatro
						span 4 CUATRO
					.recipe.siete
						span 7 SIETE
					.recipe.ocho
						span 8 OCHO
					.recipe.nueve
						span 9 NUEVE


		#add-new-bar.ui.grid.segment
			.row
				.sixteen.wide.column
					.span= __('Do you have a new recipe?')
						.ui.button.chef.button-brick
							a(href='/')= __('Create recipe')

		#recipes.ui.grid.segment.two.tabs
			.row
				.tab
					.ui.button.chef.button-green
						a(href='/recetas')= __('Popular')
				.tab
					.ui.button.chef.button-green.disabled
						a= __('Season')

			.row
				.ui.grid.segment.list
					if data.recipes.results.length
						each recipe in data.recipes.results
							.row.position
								+recipe(recipe)
					else
						| #{__('No recipes yet')}

			.row.loader
				.sixteen.wide.column
					.span= __('Loading more recipes')
