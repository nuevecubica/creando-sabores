.query.row(class = 'state-{{state}}', data-slug = '{{slug}}')
  .arrow-left
  .three.wide.column.tablet-four
    {{#if userIsAdmin}}
    a.delete-qa= __('Delete')
    a.undelete-qa= __('Undelete')
    {{/if}}
    a.ui.item.profile(href = '{{state}}' === 'published' ? '{{author.url}}' : false)
      img.ui.image.avatar(src="{{author.thumb.avatar_large}}")

  .thirteen.wide.column.tablet-eleven
    .ui.column.grid
      a.name.seven.wide.column.mobile-ten(href = '{{state}}' === 'published' ? '{{author.url}}' : false)
        span.span {{author.name}}

      .date.five.wide.column.mobile-six
        span.span {{formattedDate}}

      a.commentary.two.wide.column(href = '{{state}}' === 'published' ? '{{url}}' : false)
        span.strong= __('Coments')

    a.row(href = '{{state}}' === 'published' ? '{{url}}' : false)
      .ui.content
        .span.explain {{title}}