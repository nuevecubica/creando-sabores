div(class="{{classes}}").row.position
	a(href="{{url}}").hover-list
	.five.wide.column
		| {{#if isVideorecipe}}
		.play
			i.icon-chef-play.icon
		| {{/if}}
		.thumbnail(style='background-image: url({{thumb.list}})')
			| {{#ifRecipeClass type}}
			.row

			.row

			.row
				.ui.three.column.center.aligned.grid
					.column
						i.icon-chef-time.icon
						.span {{formatTime time}}

					.column
						i.icon-chef-porciones.icon
						.span {{portions}}

					.difficulty.column {{formatIcons difficulty 'tenedor'}}
			| {{/ifRecipeClass}}

	.eleven.wide.column

		a(href="{{url}}")
			h2.ui.header {{title}}
		.rating
			.strong= __('Rating')
			.span
				.ui.icon {{formatIcons rating 'star'}}
			.status-recipe
				| {{{stateIcon classes}}}

		.ui.content
			h3.type(class="{{type}}")= '{{translateType type}}'
			| {{{description}}}

		| {{formatOfficial isOfficial}}
