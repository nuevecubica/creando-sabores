extends ../layouts/default

include ../mixins/recipe

block content
	#signup.signin.ui.grid.segment
		.ui.page.grid
			.row
				.four.wide.column

				.logo.eight.wide.column
					a.icon-chef-logo.icon(href="/")

					.span.title Registro
					.span.subtitle Es fácil y rápido

			.row
				.sixteen.wide.column
					.ui.two.column.grid
						.column.center.aligned
							.explain.right
								.span Registrate con tus redes sociales

							.actions
								.ui.button.chef.button-fb
									i.social.icon-chef-facebook
									a(href='')
										span.social-reg Registro con
										| Facebook

								.ui.button.chef.button-g
									i.social.icon-chef-google
									a(href='')
										span.social-reg Registro con
										| Google

						.column.dashed
							.explain.left
								.span ...o con tu correo electrónico
							#form
								form(action='registro', method='post', novalidate)
									.ui.form
										#name.field
											label(for='signup-name') Nombre de usuario
											.ui.left.labeled.input
												input(id='signup-name', type='text', name='signup_name', placeholder='Nombre de usuario', tabindex='1')
												//- .indicator.hidden
													//- .icon-chef-error
											.error-message.hidden
												.span Mínimo 6 caracteres, letras o números

										#email.field
											label(for='signup-email') Correo electrónico
											.ui.left.labeled.input
												input(id='signup-email', type='email', name='signup_email', placeholder='Correo electrónico', autocomplete='off', tabindex='2')
												//- .indicator.hidden
													//- .icon-chef-error
											.error-message.hidden
												.span Tiene que tener formato de correo electrónico.

										#password.field
											label(for='signup-password', id='signup-password-label') Contraseña
											#wrapper-show-password.ui.labeled.checkbox
												input(id='show-password', type='checkbox', name='show_password')
												label(for='show-password') Mostrar
											#wrapper-password.ui.left.labeled.input
												input(id='signup-password', type='password', name='signup_password', tabindex='3')
												//- .indicator.hidden
													//- .icon-chef-error

											.error-message.hidden
												.span Mínimo 8 caracteres, letras, números, símbolos.

										input(type='hidden', name='action', value='signup')

										button.ui.button.chef.button-blue(type='submit', tabindex='4') Continuar
