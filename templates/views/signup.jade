extends ../layouts/default

block content
	#signup.signin
		.ui.page.grid.segment.head.basic
			.column
				.row.logo
					a.icon-chef-logo.icon(href="/")

				.row.section
					.title= __('Register')
					.subtitle= __('Easy and fast')

		.ui.page.grid.segment.body
			.column
				.ui.stackable.grid
					.one.column.wide
					.six.column.wide
						.explain= __('Register with social networks')
						include ../components/signin-social
					.one.column.wide

					.one.column.wide.dashed
					.six.column.wide
						.explain= __('or register with email')
						include ../components/signup-local

		.ui.page.grid.segment.tail
			.column
				.link
					| #{__('Already registered?') + ' '}
					a(href='/acceso')= __('Login')

