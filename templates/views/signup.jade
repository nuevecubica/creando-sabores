extends ../layouts/default

include ../mixins/recipe

block content
	#signup.ui.grid.segment
		.ui.page.grid
			.row

			.row
				.four.wide.column

				.logo.eight.wide.column
					a.icon-chef-logo.icon(href="/")

					.span.title Registro
					.span.subtitle Fácil y rápido

			.row
				.sixteen.wide.column

					.ui.two.column.grid
						.column.center.aligned
							.explain
								.span Registrate con tus redes sociales...

							.actions
								.ui.button.chef.button-fb
									a(href='') Registro con Facebook
									i.icon-chef-facebook

								.ui.button.chef.button-g
									a(href='') Registro con Google
									i.icon-chef-google

						.column
							.explain
								.span ...o con tu correo electrónico
							form(action='registro', method='post')
								.ui.form
									#username.field
										label(for='signup_name') Nombre de usuario
										.ui.left.labeled.input
											input(id='signup_name', type='text', name='signup_name', placeholder='Nombre de usuario')
											.indicator.hidden
												.icon-chef-error
										.ui.error.message
											.header We noticed some issues

									#email.field
										label(for='signup_email') Correo electrónico
										.ui.left.labeled.input
											input(id='signup_email', type='email', name='signup_email', placeholder='Correo electrónico')
											.indicator.hidden
												.icon-chef-error
										.ui.error.message
											.header We noticed some issues

									#password.field
										label(for='signup_password') Contraseña
										#wrapper-password.ui.left.labeled.input
											input(id='signup_password', type='password', name='signup_password', autocomplete='off')
											.indicator.hidden
												.icon-chef-error

											#wrapper-show-password.ui.labeled.checkbox
												input(id='show_password', type='checkbox', name='show_password')
												label(for='show_password') Mostrar

										.ui.error.message
												.header We noticed some issues

									input(type='hidden', name='action', value='signup')

									button.ui.button.chef.button-blue(type='submit') Continuar
