extends ../layouts/default

include ../mixins/header

block js
  script(src='/js/questions.js')


block content

  +header(data, section)

  .ui.page.grid.bg-grey
      .row
        .twelve.wide.column
          .recipe-contest
            h2.title.header.font-extra-larger.uppercase= __('Previous questions')
            p.subheader= __('Make your question, Jes√∫s Gibaja and network users solve your doubts.')
             
  .ui.page.grid.body

    #send-query.ui.grid.segment
      .row
        .ui.form
          form.field
            .ui.icon.input
              input(type='text', placeholder="#{__('Send questions')}")
              button.icon.chef.button-pink-side= __('Send')


    #questions.ui.grid.segment.two.tabs
      .row.tab-header
        .tab
          a(href='#')
            .ui.button.chef.button-yellow
              | #{('Recents')}
        .tab
          a(href='#')
            .ui.button.chef.button-yellow.disabled
              | #{('All questions')}

      .row
        .ui.grid.segment.list.stackable
          if data.questions.length
            each question in data.questions
              //+questions(questions)
              span= question.title
          else
            | #{__('No questions yet')}

      .row
        .loader
          .sixteen.wide.column.loading= __('Loading more recipes')
          .sixteen.wide.column.load-more
            .ui.button.chef.button-brick.load-button
              a(href="#")= __('Load more')
