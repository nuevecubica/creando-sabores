.form-signin
	form(action='registro', method='post', novalidate)
		.ui.form
			#name.field(class=(errors.fields.name ? "error-here" : ""))
				label(for='signup-name') Nombre de usuario
				.ui.left.labeled.input
					input(id='signup-name', type='text', name='signup_name', placeholder='Nombre de usuario', value='#{form.signup_name||""}', tabindex='1')

				.error-message.hidden Mínimo 6 caracteres, letras o números.

			#email.field(class=(errors.fields.email ? "error-here" : ""))
				label(for='signup-email') Correo electrónico
				.ui.left.labeled.input
					input(id='signup-email', type='email', name='signup_email', placeholder='Correo electrónico', value='#{form.signup_email||""}', tabindex='2')

				.error-message.hidden Correo electrónico incorrecto o en uso.

			#password.field(class=(errors.fields.password ? "error-here" : ""))
				label(for='signup-password', id='signup-password-label') Contraseña
				#wrapper-show-password.ui.labeled.checkbox
					input(id='show-password', type='checkbox', name='show_password')
					label(for='show-password') Mostrar
				#wrapper-password.ui.left.labeled.input
					input(id='signup-password', type='password', name='signup_password', tabindex='3')
					//- .indicator.hidden
						//- .icon-chef-error

				.error-message.hidden Mínimo 8 caracteres.

			//- #terms.field

			//- 	.ui.left.labeled.checkbox
			//- 		input(id='signup-terms', type='checkbox', name='signup_terms')
			//- 		label(for='signup-terms') Acepto los <a href='/terminos'>términos y condiciones</a>

			input(type='hidden', name='action', value='signup')

			button.ui.button.chef.button-blue(type='submit', tabindex='4') Continuar

			#terms.field
				.info-terms Al continuar aceptas los 
					a(href='/terminos') términos y condiciones.