#header.ui.grid.segment
	.row
		.sixteen.wide.column
			#menu-wrapper
				.ui.menu
					.right.menu
						if user
							a.ui.item.profile(href='/perfil')
								- user.avatars.local = '../frontend/images/test_user.png'
								img.ui.image.avatar(src="#{user.avatars[user.media.avatar.origin]}")

								if user.name
									strong #{user.name}
								else
									strong #{user.username}

							if user.canAccessKeystone
								.ui.item
									a.ui.button.chef.button-brick(href="/keystone")= __('Admin')
							.ui.item
								a.ui.button.chef.button-brick(href="/salir")= __('Logout')

						else
							.ui.item
								a.ui.button.chef.button-brick(href="/acceso")= __('Access')
							.ui.item
								a.ui.button.chef.button-brick(href="/registro")= __('Register')

						#menu.ui.item
							i.icon-chef-menu
