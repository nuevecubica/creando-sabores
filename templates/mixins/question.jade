mixin question(question)
  
  #query.row
    .arrow-left
    .three.wide.column.tablet-four
      a.ui.item.profile(href='/perfil')
        img.ui.image.avatar(src="#{user.thumb.avatar_large}")

    .thirteen.wide.column.tablet-eleven
      .ui.column.grid
        a.name.seven.wide.column.mobile-ten(href='/perfil')
          span.span= question.author.name

        .date.five.wide.column.mobile-six
          span.span= question.formattedDate

        a.commentary.two.wide.column(href=question.url)
          span.strong= __('000 Comentarios')

      a.row(href=question.url)
        .ui.content
          .span= question.title