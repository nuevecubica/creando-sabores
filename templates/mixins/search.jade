mixin search(section)
  #search-bar.ui.grid.segment
    .row
      .ui.form
        form.field(action='/buscar')
          .ui.icon.input
            input#search-query(name='q', type='text', placeholder="#{__('Search terms')}")
            if section
              input(name='idx', type='hidden', value=section)
            button#search-button.icon-chef-lupa.icon.chef.button-pink-side