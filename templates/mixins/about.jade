mixin about(user)
	//- if user privacy settings
	.four.wide.column.picture-wrapper
		.picture
			if !user.media.avatar.url
				- user.media.avatar.url = '../frontend/images/test_user.png'

			#profile-img.ui.image.avatar(style="background-image: url(#{user.media.avatar.url}); background-size: cover; background-position:center; ")
			.icon-chef-camera.rounded.show-editable
				input#profile-img-select(type="file" name="avatars.local_upload")

	.twelve.wide.column.info
		h2.ui.header Â¡Hola 
			strong.set-editable.one-line(data-length="20")!= user.name
			|!
		.ui.content.set-editable(spellcheck="false")!= user.about